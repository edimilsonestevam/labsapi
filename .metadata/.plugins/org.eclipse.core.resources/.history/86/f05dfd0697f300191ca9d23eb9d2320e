package br.sp.edimilsonestevam.stepDefinition;

import org.openqa.selenium.WebDriver;

import br.sp.edimilsonestevam.page.Conta;
import br.sp.edimilsonestevam.setup.Configuracao;
import cucumber.api.java.pt.Dado;
import cucumber.api.java.pt.Entao;
import cucumber.api.java.pt.Quando;


public class Test_Steps{

	protected static WebDriver navegador;

	@Dado("^eu estou na pagina para criar uma conta no Heroku App https://automacaocombatista\\.herokuapp\\.com$")
	public void eu_estou_na_pagina_para_criar_uma_conta_no_Heroku_App_https_automacaocombatista_herokuapp_com() throws Throwable {

		navegador = new Configuracao().AbrirNavegador("chrome", "automacaocombatista.herokuapp.com/");
		new Conta(navegador).ValidarPaginaCorrente("www.automacaocombatista.herokuapp.com");
		new Conta(navegador).AcessarComecarAutomacaoWeb();
		new Conta(navegador).AcessarMenuFormulario();
		new Conta(navegador).AcessarSubmenuCriarUsuario();
		
	}
	
	@Quando("^eu informo o nome Edimilson, ultimo name Estevam, email edimilsonestevam@owltechnologies\\.com\\.br, endereco Avenida Paulista, (\\d+), (\\d+)º andar, universidade <universidade>, profissiao <profissao>, genero Masculino, idade (\\d+)$")
	public void eu_informo_o_nome_Edimilson_ultimo_name_Estevam_email_edimilsonestevam_owltechnologies_com_br_endereco_Avenida_Paulista_º_andar_universidade_universidade_profissiao_profissao_genero_Masculino_idade(int arg1, int arg2, int arg3) throws Throwable {
		
		new Conta(navegador).CadastrarNovoUsuario("Edimilson", "Estevam", "edimilsonestevam@owltechnologies.com.br", "Avenida Paulista, 171, 4º andar", "Mackenzie", "Test Specialist", "Masculino", "28");
		
	}

	@Quando("^eu confirmo a operacao$")
	public void eu_confirmo_a_operacao() throws Throwable {

		new Conta(navegador).ConfirmarOperacao();
		
	}

	@Entao("^o sistema apresenta uma mensagem de sucesso Conta criada!$")
	public void o_sistema_apresenta_uma_mensagem_de_sucesso_Conta_criada() throws Throwable {

		new Conta(navegador).ValidarMensagemUsuarioCriado("Usuário Criado com sucesso");
		
	}
}