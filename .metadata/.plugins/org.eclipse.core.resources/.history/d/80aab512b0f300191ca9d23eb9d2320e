package br.sp.edimilsonestevam.stepDefinition;

import br.sp.edimilsonestevam.service.Consulta;
import br.sp.edimilsonestevam.service.CT0001Usuario;
import cucumber.api.java.en.Given;
import cucumber.api.java.pt.Quando;

public class Test_Steps {

	@Given("^eu estou com acesso ao servico da API de Tarefas$")
	public void eu_estou_com_acesso_ao_servico_da_API_de_Tarefas() throws Throwable {

		new Consulta().MostrarAPI("https://api-de-tarefas.herokuapp.com/contacts");
		
	}

	@Quando("^eu informo email edimilsonestevam@owltechnologies\\.com\\.br, senha teste(\\d+), confirmacao de senha teste(\\d+) no servico \"([^\"]*)\"$")
	public void eu_informo_email_edimilsonestevam_owltechnologies_com_br_senha_teste_confirmacao_de_senha_teste_no_servico(int arg1, int arg2, String arg3) throws Throwable {
		
		new CT0001Usuario().CriarUsuario("edimilsonestevam@owltechnologies.com.br", "teste123", "teste123");
		
	}
	
	@Given("^o sistema retorna o codigo da resposta (\\d+)$")
	public void o_sistema_retorna_o_codigo_da_resposta(int arg1) throws Throwable {

		new Consulta().MostrarSeUsuarioFoiCriado("900");
		
	}
	
	@Quando("^eu informo codigo de identificacao (\\d+) no servico \"([^\"]*)\"$")
	public void eu_informo_codigo_de_identificacao_no_servico(int arg1, String arg2) throws Throwable {
		
		new Consulta().MostrarSeUsuarioFoiCriado("999");
		
	}

}