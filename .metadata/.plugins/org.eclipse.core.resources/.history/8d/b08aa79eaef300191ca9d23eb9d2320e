package br.sp.edimilsonestevam.service;

import static io.restassured.RestAssured.given;
import static org.hamcrest.Matchers.*;

public class Consulta {

	public void MostrarAPI(String url) {
		
		System.out.println("API NAME: " + "\n" + url);
		
		given()
			.get(url)
		.then()
			.log().headers()
		;
		
		System.out.println("------------------------------------------------------------------------------------------------------------------");
		
	}
	
	public void MostrarCodigoDaResposta(String url) {

		System.out.println("RESPONSE CODE:");
		
		given()
			.get(url)
		.then()
			.statusCode(200)
			.log().status()
		;
		
		System.out.println("------------------------------------------------------------------------------------------------------------------");

	}
	
	public void MostrarSeUsuarioFoiCriado(String idlUsuario) {
		
		System.out.println("RESPONSE USER NAME:");
		String complementoURI = "/contacts/";
		given()
			.get(complementoURI + idlUsuario)
		.then()
			.statusCode(200)
			.body("id", is(idlUsuario))
			.body()
		;
		
		System.out.println("------------------------------------------------------------------------------------------------------------------");
		
	}
	
	public void MostrarCorpoDaResposta(String url) {
		
		System.out.println("RESPONSE BODY:");
		
		given()
			.get(url)
		.then()
			.statusCode(200)
			.log().body()
		;
		
		System.out.println("------------------------------------------------------------------------------------------------------------------");
		
	}
}
