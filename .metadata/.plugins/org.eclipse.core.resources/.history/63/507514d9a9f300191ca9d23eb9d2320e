package br.sp.edimilsonestevam.service;

import static io.restassured.RestAssured.given;
import static org.hamcrest.Matchers.*;

import java.util.HashMap;
import java.util.Map;

import br.sp.edimilsonestevam.core.Base;

public class Usuario extends Base{
	
	public void CriarUsuaio(String email, String senha, String confirmarSenha) {
	
		Map<String, String> dadosUsuario = new HashMap<String, String>();
		dadosUsuario.put("email", email);
		dadosUsuario.put("password", senha);
		dadosUsuario.put("password_confirmation", confirmarSenha);
		
		given()
			.body(dadosUsuario)
		.when()
			.post("/users")
		.then()
			.log().all()
			.statusCode(201)
			.body("id", is(notNullValue()))
			.body("email", is(email))
		;
		
	}
}
